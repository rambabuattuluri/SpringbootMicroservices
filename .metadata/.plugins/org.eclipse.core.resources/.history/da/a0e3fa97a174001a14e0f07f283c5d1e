package com.springboot.microservice.CurrencyConversionFactor;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.ApplicationContext;
import org.springframework.context.annotation.Bean;

@SpringBootApplication
public class CurrencyConversionFactorApplication {

	public static void main(String[] args) {
		SpringApplication.run(CurrencyConversionFactorApplication.class, args);
	}
	
	@Autowired
	ConversionFactorJpaRepository repo;
	@Bean
	CommandLineRunner dlr(ApplicationContext ctx) {
		return s -> {

			ConversionFactorValue  value = new ConversionFactorValue(1,"USD","IND",74.56);
			repo.save(value);
			
			value = new ConversionFactorValue(2,"CAD", "IND", 53.39);
			repo.save(value);
			
			value = new ConversionFactorValue(3, "EUR", "IND", 83.68);
			repo.save(value);
			
			value = new ConversionFactorValue(4, "NZD", "IND", 45.23);
			repo.save(value);
			
			value = new ConversionFactorValue(5, "SGD", "IND", 52.44);
			repo.save(value);
		};

	}

}
